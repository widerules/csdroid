<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<ListPreference android:title="Maximum Charts"
		android:summary="Maximum number charts. Larger values may cause delays."
		android:key="maxCharts" android:defaultValue="5"
		android:entries="@array/max_charts_entries"
		android:entryValues="@array/max_charts_values" />
	<ListPreference android:title="Units"
		android:summary="Display distances in metric (km) or US (miles)"
		android:key="units" android:defaultValue="METRIC"
		android:entries="@array/units_entries"
		android:entryValues="@array/units_values" />
</PreferenceScreen>

