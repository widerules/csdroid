<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal" android:id="@+id/csc_rating"
		android:layout_width="8px" android:layout_height="fill_parent" />
	<TableLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:paddingBottom="4px"
		android:paddingLeft="4px">
		<TableRow android:id="@+id/csc_text_row">
			<TextView android:text="TestRegion - Test Chart Name"
				android:id="@+id/csc_label" android:textSize="16px"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</TableRow>
		<TableRow>
			<TableLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:shrinkColumns="*">
				<TableRow>
					<TextView android:id="@+id/csc_rating_label" android:text="Poor" android:textSize="10px"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />
					<TextView android:id="@+id/csc_distance" android:text="123km" android:paddingLeft="4px"
						android:layout_width="fill_parent" android:textSize="10px"
						android:layout_height="wrap_content" />
				</TableRow>
			</TableLayout>
		</TableRow>
		<TableRow android:id="@+id/csc_image_row">
			<ImageView android:id="@+id/csc_summary_img"
				android:paddingBottom="2px" />
		</TableRow>
	</TableLayout>
</LinearLayout>