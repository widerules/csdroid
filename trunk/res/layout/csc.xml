<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:id="@+id/csc_rating"
		android:layout_width="8px" android:background="#ffffff"
		android:layout_height="fill_parent" />
	<TableLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:shrinkColumns="2"
		android:paddingBottom="5px" android:paddingLeft="5px">
		<TableRow android:id="@+id/csc_text_row">
			<TextView android:text="XXX" android:textColor="#ffffff"
				android:id="@+id/csc_label" android:textSize="16px"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</TableRow>
		<TableRow android:id="@+id/csc_image_row">
			<ImageView android:id="@+id/csc_summary_img"
				android:paddingBottom="5px" />
		</TableRow>
	</TableLayout>
</LinearLayout>